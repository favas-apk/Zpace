<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/rl1"
    android:layout_width="match_parent"
    android:layout_height="130dp"
android:layout_marginBottom="5dp"

>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="130dp"

     >

        <com.github.florent37.shapeofview.shapes.DottedEdgesCutCornerView
            android:layout_width="match_parent"
            android:layout_height="match_parent"

            app:shape_dot_radius="3dp"
            app:shape_dot_spacing="2dp"
            app:shape_dottedEdgesCutCorner_bottomLeftSize="8dp"
            app:shape_dottedEdgesCutCorner_bottomRightSize="8dp"
            app:shape_edge_position="all">



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@android:color/white"
                android:orientation="vertical"
                >


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:weightSum="1"
                    android:orientation="horizontal">


                    <com.airbnb.lottie.LottieAnimationView
                        android:id="@+id/lav_main"
                        android:layout_width="0dip"
                        android:layout_weight=".4"
                        android:layout_height="match_parent"
                        app:lottie_autoPlay="true"


                        app:lottie_fileName="waves.json"

                        app:lottie_loop="true"
                        android:visibility="gone"

                        app:lottie_speed="1" />

                    <AdapterViewFlipper
                        android:id="@+id/avf1"
                        android:layout_width="0dip"
                        android:layout_weight=".4"
                        android:layout_height="match_parent"


                        />




                    <TextView
                        android:id="@+id/txt2"

                        android:layout_width="0dip"
                        android:layout_weight=".6"
                        android:layout_height="match_parent"
                        android:fontFamily="@font/bonbon"
                        android:gravity="center"
                        android:textSize="20sp"



                        />




                </LinearLayout>


            <LinearLayout
                android:id="@+id/ll1"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:weightSum="1"
                android:background="@drawable/back1"
                android:orientation="horizontal">



                <TextView
                    android:id="@+id/txt1"
                    android:layout_width="0dip"
                    android:layout_weight=".7"
                    android:layout_height="match_parent"

                    android:gravity="center"
                    android:fontFamily="@font/montserrat"
                 />



                <Button
                    android:id="@+id/btn_view_more_offer"
                    android:layout_width="0dip"
                    android:layout_height="15dp"
                    android:layout_margin="5dp"
                    android:layout_weight=".2"
                    android:background="@color/blue"
                    android:fontFamily="@font/montserrat"
                    android:text="@string/view_all"
                    android:textColor="@color/white"
                    android:visibility="gone"

                    android:textSize="10sp"

                    />




            </LinearLayout>




            </LinearLayout>

        </com.github.florent37.shapeofview.shapes.DottedEdgesCutCornerView>




    </LinearLayout>


</RelativeLayout>